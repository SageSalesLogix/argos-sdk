{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "module": "amd",
        "lib": ["es6", "dom"],
        "outDir": "./src-out",
        "moduleResolution": "node",
        "sourceMap": true,
		"removeComments": false,
        "target": "es5",
		"experimentalDecorators": true,
        "types": [
          "jquery",
          "node"
